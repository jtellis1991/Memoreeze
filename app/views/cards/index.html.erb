
<div class="d-flex justify-content-between align-items-center">
  <h1>Cards in <%=@assignment.decks.first.name %></h1>
  <%= link_to 'Return to Assignment', assignment_path(@assignment, :user_id => @user.id), class: "mt-3 btn btn-secondary btn-lg mb-3" %>
</div>

<table class="table table-striped text-center">
  <thead>
    <tr>
      <th scope="col">Target</th>
      <th scope="col">Front</th>
      <th scope="col">Back</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody class="table-active text-center">
    <tr>
      <%= render 'form', card: @deck.cards.build %>
    </tr>
  </tbody>

  <tbody>
    <% @cards.order(:id => :desc).each do |card| %>
      <%= render 'card', card: card %>
    <% end %>
  </tbody>
  
</table>


