<tr id="<%= dom_id(card) %>" class="border text-center">
  <td class="col-1">
    <div class="btn btn-link btn-lg text-secondary" data-toggle="modal" data-target="#preview" id="<%= dom_id(card) %>_show">
      <i class="fa fa-eye" aria-hidden="true"></i>
    </div> 
  </td>

  <!-- Modal -->
  <div class="modal fade" id="preview" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="previewLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button class="btn btn-outline-primary btn-lg modal-title" id="previewLabel" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="solution result explanation"><%= card.target.target %></button>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="previewForm">
          <%= render 'preview', card: card %>
        </div>
      </div>
    </div>
  </div>



  <td class="col-2">
    <div id="<%= dom_id(card) %>_target">
      <%= link_to "cards/#{card.id}/target/edit", class: "text-primary text-decoration-none", remote: true do %>
        <p>
          <%= markdown(card.target.target) %>
        </p>
      <% end %>
    </div>
  </td>
    <td class="col-3">
    <div id="<%= dom_id(card) %>_explanation">
      <p>
        <%= link_to "cards/#{card.id}/explanation/edit", class: "text-primary text-decoration-none", remote: true do %>
          <%= markdown(card.target.explanation) %>
      <p>    
      <% end %>
    </div>
  </td>
  <td class="col-3">
    <div id="<%= dom_id(card) %>_illustrative_test">
      <%= link_to "cards/#{card.id}/illustrative_test/edit", class: "text-primary text-decoration-none", remote: true do %>
        <p>
          <%= markdown(card.illustrative_test) %>
        </p>
      <% end %>
    </div>
  </td>
  <td class="col-3">
    <div id="<%= dom_id(card) %>_solution">
      <p>
        <%= link_to "cards/#{card.id}/solution/edit", class: "text-primary text-decoration-none", remote: true do %>
          <%= markdown(card.solution) %>
      <p>    
      <% end %>
    </div>
  </td>
  <td class="col-1">
    <div id="<%= dom_id(card) %>_delete">
      <%= link_to deck_card_path(deck, card), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link btn-lg text-secondary", remote: true do%>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
  </td>
</tr>