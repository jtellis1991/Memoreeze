      </td>

      <td>
        <%= form.label :illustrative_test, class: "sr-only" %>
        <%= form.text_area :illustrative_test, class: "form-control", placeholder: "Illustrative Test Text" %>
      </td>

      <td>
        <%= form.label :solution, class: "sr-only" %>
        <%= form.text_area :solution, class: "form-control", placeholder: "Solution Text"  %>
      </td>


  <td class="actions">
    
    <%= button_tag type: 'submit', class: "btn btn-link btn-lg text-secondary" do %>
       <i class="fa fa-plus-square" aria-hidden="true"></i>
    <% end %>
  </td>

<% end %>
