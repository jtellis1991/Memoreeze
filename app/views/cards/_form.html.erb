<%= form_with(model: [deck, card], local: false) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :target, class: "font-weight-bold"  %>
    <%= form.text_field :target, class: "form-control", placeholder: "What you want to learn." %>
  </div>
  <div class="form-group">
    <%= form.label :explanation, class: "font-weight-bold"   %>
    <%= form.text_area :explanation, class: "form-control", placeholder: "All the details about the target go here. This might be a dictionary entry or a link to a specification.", size: "70x5" %>
  </div>
  <div class="form-group">
    <%= form.label :illustrative_test, "Illustrative Test", class: "font-weight-bold"  %>
    <%= form.text_field :illustrative_test, class: "form-control", placeholder: "An example that tests your understanding of the target in context goes here." %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :solution, class: "font-weight-bold" %>
    <%= form.text_area :solution, class: "form-control", placeholder: "The solution/translation of the test goes here.", size: "70x5"  %>
  </div>

 
    <%= form.submit "Create New Card", class: "btn btn-lg btn-primary btn-block"  %>
  

<% end %>
