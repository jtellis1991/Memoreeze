
<div id="<%= dom_id(card)%>_explanation_form">
  <%= form_with(url: "/decks/#{deck.id}/cards/#{card.id}/explanation", local: false) do |form| %>
    <% if card.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

        <ul>
          <% card.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

        <%= form.label :explanation, class: "sr-only" %>
        <%= form.text_area :explanation, class: "form-control", value: card.target.explanation %>

  <%= form.submit "Update Explanation", class: "btn btn-outline-secondary btn-block" %>

  <% end %>
</div>