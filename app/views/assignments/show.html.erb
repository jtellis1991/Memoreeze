<p id="notice"><%= notice %></p>

<h1>
  <%= @assignment.name %>
</h1>


<% if @assignment.decks.first.nil? %>
<%= link_to 'Create New Deck', new_deck_path(:assignment_id => @assignment.id, :user_id => @user.id) %> 
<% else %>
<%= link_to 'Edit Deck', edit_deck_path(@assignment.decks.first) %> 
<%= link_to 'Show Deck', deck_path(@assignment.decks.first) %>
<% end %>
